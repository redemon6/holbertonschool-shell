#!/usr/bin/env bash
# Purpose: Manage the manage_my_process script using start, stop, restart

PIDFILE="/var/run/my_process.pid"
SCRIPT_PATH="/full/path/to/manage_my_process"   # <- replace with the actual path

start() {
    "$SCRIPT_PATH" &                 # Start in background
    echo $! > "$PIDFILE"             # Save PID to file
    echo "manage_my_process started"
}

stop() {
    if [ -f "$PIDFILE" ]; then
        PID=$(cat "$PIDFILE")
        kill "$PID" 2>/dev/null
        rm -f "$PIDFILE"
        echo "manage_my_process stopped"
    else
        echo "manage_my_process is not running"
    fi
}

restart() {
    stop
    start
    echo "manage_my_process restarted"
}

# Main logic
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac
