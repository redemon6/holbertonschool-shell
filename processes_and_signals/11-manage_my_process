#!/usr/bin/env bash
# Purpose: Init-style script to manage manage_my_process

# PID file location
PIDFILE="/var/run/my_process.pid"

# Absolute path to the managed script
SCRIPT_PATH="/full/path/to/manage_my_process"   # <-- Replace with actual path

start() {
    "$SCRIPT_PATH" &                 # Start process in background
    echo $! > "$PIDFILE"             # Save PID to file
    echo "manage_my_process started"
}

stop() {
    if [ -f "$PIDFILE" ]; then
        PID=$(cat "$PIDFILE")
        kill "$PID" 2>/dev/null
        rm -f "$PIDFILE"
    fi
    echo "manage_my_process stopped"
}

restart() {
    stop > /dev/null 2>&1
    start > /dev/null 2>&1
    echo "manage_my_process restarted"
}

# Main logic
case "$1" in
    start)
        start
        ;;
    stop)
        stop
        ;;
    restart)
        restart
        ;;
    *)
        echo "Usage: manage_my_process {start|stop|restart}"
        exit 1
        ;;
esac

